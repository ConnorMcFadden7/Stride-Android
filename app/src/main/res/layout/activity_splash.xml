<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_screen"
    >

  <ImageView
      android:id="@+id/image_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:src="@drawable/img_splash"
      />

  <org.lazysource.uberprogressview.UberProgressView
      android:layout_width="@dimen/splash_progress_size"
      android:layout_height="@dimen/splash_progress_size"
      android:layout_below="@+id/image_logo"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/splash_progress_margin_top"
      app:fading_circle_color="@android:color/white"
      app:stationary_circle_color="@android:color/white"
      app:orbiting_circle_color="@android:color/white"
      app:direction="counterclockwise"
      app:orbiting_circle_radius="@dimen/generic_margin_slightly_smaller"
      app:stationary_circle_radius="@dimen/generic_margin_mediumer"
      />

</RelativeLayout>